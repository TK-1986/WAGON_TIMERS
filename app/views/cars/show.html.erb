<div class="background-caroussel">
<div class="container">
  <div class="card mt-3 mb-3">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="https://media.giphy.com/media/eLjgKgpVkigynu5Pfn/giphy.gif" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="https://media.giphy.com/media/fjxdRAtGlOhOqem3JH/giphy.gif" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="https://media.giphy.com/media/AgP4TFcZ3C9BoTcSe4/giphy.gif" class="d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <div class="containter">
      <div class="card-body" style="display: flex;flex-direction: column;">
        <h5 class="card-title"> <%= @car.brand %> - <%= @car.modele %> <%= @car.year.strftime("%Y") %></h5>
        <p class="card-text"><%= @car.description %></p>
         <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, as: :date %>
          <%= f.input :end_date, as: :date %>
          <%= f.button :submit %>
         <% end %>
        <p class="card-text mt-3"><small class="text-muted">Published on <%= @car.created_at.strftime(@car.created_at.strftime("%d"+"-"+"%m"+"-"+"%Y")) %></small></p>
    </div>
      </div>
    </div>
  </div>
</div>
</div>
